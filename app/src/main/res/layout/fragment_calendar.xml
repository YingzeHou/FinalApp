<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarFrag">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/calendar_bg"
        app:layout_constraintLeft_toLeftOf="@id/bottomNavigationView"
        app:layout_constraintBaseline_toBottomOf="@id/bottomNavigationView"/>


    <LinearLayout
        android:id="@+id/scheduleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="10/14/2021"
                android:layout_weight="0.5"
                android:textSize="25dp"
                android:layout_marginTop="10dp"></TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/weekName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="30sp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Mon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Tue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Wed" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Thur" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Fri" />

        <TextView
            android:id="@+id/title6"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Sat" />

        <TextView
            android:id="@+id/title7"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:text="Sun" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/weekPanel_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_marginTop="70dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="8:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="9:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="10:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="11:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="12:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="13:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="14:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="15:00" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="16:00" />

                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="17:00" />

                <TextView
                    android:id="@+id/tv_11"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="18:00" />

                <TextView
                    android:id="@+id/tv_12"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="19:00" />

                <TextView
                    android:id="@+id/tv_13"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/time_size"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="20:00" />

                <TextView
                    android:id="@+id/tv_14"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="14"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_15"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="15"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_16"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/weekItemHeight"
                    android:layout_marginLeft="@dimen/weekItemMarLeft"
                    android:layout_marginTop="@dimen/weekItemMarTop"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="16"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- 周一到周日的排列 -->
            <LinearLayout
                android:id="@+id/weekPanel_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekPanel_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekPanel_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekPanel_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekPanel_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekPanel_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekPanel_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

