<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whitewood"
    tools:context=".Reminder.EditTodoFrag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/goToReminder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_margin="10dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF" />

        <TextView
            android:id="@+id/editTodoPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Edit To Do"
            android:layout_weight="0.5"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Content"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/editContent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="Please text in..."
            android:textSize="15dp"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/black" />


    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Space
            android:layout_width="57dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/selectDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pick the date"
            android:textStyle="bold|italic"
            android:textSize="15dp"
            android:padding="10dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/textview_border"/>
        <!--        android:ems="20"-->
        <!--        android:onClick="onClickSelectDate"-->

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Space
            android:layout_width="55dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/selectTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pick the time"
            android:textSize="15dp"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/textview_border"/>
        <!--        android:ems="20"-->
        <!--        android:onClick="onClickSelectTime"-->

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/todoLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/editLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Edit the location"
            android:textSize="15dp"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/textview_border"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/saveTodo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="update"
            android:textAlignment="gravity"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/textview_border"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/deleteTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:textAlignment="gravity"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/textview_border"/>

    </LinearLayout>

</LinearLayout>